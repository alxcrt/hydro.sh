{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"typecheck": {
			"dependsOn": ["^typecheck"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"cache": false,
			"persistent": true,
			"env": [
				"DATABASE_URL",
				"BETTER_AUTH_SECRET",
				"BETTER_AUTH_URL",
				"CORS_ORIGIN",
				"POLAR_ACCESS_TOKEN",
				"NODE_ENV",
				"PORT",
				"VITE_SERVER_URL",
				"DOMAIN",
				"RESEND_API_KEY",
				"GOOGLE_CLIENT_ID",
				"GOOGLE_CLIENT_SECRET",
				"STRIPE_SECRET_KEY",
				"STRIPE_WEBHOOK_SECRET",
				"STRIPE_PUBLISHABLE_KEY"
			]
		},
		"db:push": {
			"cache": false,
			"persistent": false
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:migrate": {
			"cache": false,
			"persistent": false
		},
		"db:generate": {
			"cache": false,
			"persistent": false
		}
	}
}
